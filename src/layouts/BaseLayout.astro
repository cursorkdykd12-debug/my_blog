---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '마크다운 블로그' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={`${base}favicon.png`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;600;700&family=Noto+Serif+KR:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <nav>
      <a href={base}>Home</a>
      <a href={`${base}about/`}>About</a>
      <a href={`${base}blog/`}>Blog</a>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>© 2025 My Blog. Built with Astro.</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-serif: 'Noto Serif KR', Georgia, serif;
  }
</style>
